/**
 * 主价格(当前实际价格)
 * @param price 原价格
 * @param discountPrice 折扣价
 */
function mainPrice(price, discountPrice) {
  if (!discountPrice) return price;
  else return discountPrice;
}

/**
 * 需要划线的价格
 * @param price 原价格
 * @param discountPrice 折扣价
 */
function slashedPrice(price, discountPrice) {
  if (discountPrice) return price;
}

module.exports = {
  mainPrice: mainPrice,
  slashedPrice: slashedPrice
}