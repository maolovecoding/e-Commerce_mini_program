/* components/cell/index.wxss */
.container {
    box-sizing: border-box;
    border: 2rpx solid #333;
    padding: 2rpx;
    height: 60rpx;
}

.inner-container {
    height: 100%;
    padding-left: 15rpx;
    padding-right: 15rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #fff;
    font-size: 24rpx;
}

.img {
    display: flex;
    width: 44rpx;
    height: 44rpx;
    margin-right: 10rpx;
}

/*禁用按钮样式*/
.forbidden {
    border: 2rpx dashed #bbb;
    color: #bbb;
}

/*选中样式*/
.selected-outer {
    border: 2rpx solid #157658;
    color: #fff;
}

.selected-inner {
    background-color: #157658;
}

