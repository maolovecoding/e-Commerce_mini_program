/* components/spu-description/index.wxss */

.container {
    box-sizing: border-box;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 34rpx 30rpx 26rpx 30rpx;
    width: 100%;
}

.tags {
    display: flex;
}

.l-tag {
    margin-right: 6rpx !important;
}

.left {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.subtitle {
    color: #999;
    font-size: 28rpx;
    font-weight: 400;
    margin-top: 40rpx;
    margin-bottom: 16rpx;
}

.price-row {
    display: flex;
    /* 基线对齐 */
    align-items: baseline;
}

.l-price-unit {
    margin-right: 14rpx !important;
}

.discount-price {
    margin-left: 20rpx;
    margin-right: 80rpx;
}

/* 折扣tag变成圆角 */
.discount-tag {
    position: relative !important;
    bottom: 4rpx;
    width: 50rpx;
    border-radius: 20rpx !important;
}

.right {
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    width: 78rpx;
    height: 120rpx;
    border-left: 2px dashed #F5F5F5;
}

/*分享按钮样式*/
.inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #DCEBE6 !important;
    width: 50rpx;
    height: 120rpx;
}

.inner text {
    font-size: 20rpx;
    color: #157658;
}


