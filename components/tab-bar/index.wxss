/*字体图标的外部样式类，告诉icon组件，引用这个*/
.sleeve {
    font-family: sleeve !important;
    font-size: 16px;
    font-style: normal;
}

.container {
    height: 100rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    background-color: #fff;
}

.icons {
    box-sizing: border-box;
    padding-left: 16rpx;
    padding-right: 22rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    width: 230rpx;
    height: 100%;
    color: #999;
}

.icons > view {
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}

